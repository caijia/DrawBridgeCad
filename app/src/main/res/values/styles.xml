<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--宽度和屏幕一致dialog-->
    <style name="customDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>            <!--是否有边框-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>         <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>       <!--是否半透明-->
        <item name="android:windowContentOverlay">@null</item>      <!--是否有遮盖-->
        <item name="android:windowAnimationStyle">@style/mystyle</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item>        <!--背景是否模糊显示-->
    </style>

    <!--弹窗动画-->
    <style name="mystyle" parent="android:Animation">
        <!--//进入时的动画-->
        <item name="@android:windowEnterAnimation">@anim/dialog_right_enter</item>
        <!--//退出时的动画-->
        <item name="@android:windowExitAnimation">@anim/dialog_right_exit</item>
    </style>

</resources>
